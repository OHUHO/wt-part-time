page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: whitesmoke;
  /* background-color: red; */
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.experience-container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin: 10rpx;
}

.top-bg {
  display: flex;
  height: 200rpx;
}
.top-bg image {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
}
.user-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  background-color: white;
}
.user-container .userInfo {
  display: flex;
  flex-direction:row;
  align-items:center;
}
.user-container .userInfo .image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50rpx;
}
.user-container .userInfo .name {
  margin-left: 24rpx;
}
.publish-btn {
  border: 2rpx solid rgb(202, 200,200);
  padding: 8rpx 26rpx;
  border-radius: 40rpx;
  /* margin: 10rpx; */
}
.publish-btn .btn-text {
  font-size: 26rpx;
  font-weight: 500;
  color: rgb(133, 128, 128);
}


