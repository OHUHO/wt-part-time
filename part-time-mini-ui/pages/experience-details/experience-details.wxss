page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: whitesmoke;
  /* background-color: red; */
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.experience-container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin: 16rpx;
}
.content-container {
  padding: 14rpx;
  /* background-color: red; */
  background-color: white;
  border-radius: 14rpx;
  display: flex;
  flex-direction: column;
}
.userinfo-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
  color: rgb(105, 104, 104);
}
.userinfo-container .userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userinfo-container .userinfo image {
  width: 99rpx;
  height: 99rpx;
  border-radius: 50%;
}
.userinfo-container .userinfo text {
  margin-left: 16rpx;
  font-size: 30rpx;
  font-weight: bolder;
}
.userinfo-container .userinfo .love {
  display: flex;
  flex-direction: row;
  background-color: #f6a57f;
  padding: 6rpx 16rpx;
  margin-left: 14rpx;
  border-radius: 26rpx;
  font-size: 10rpx;
  color: white;
}
.userinfo-container .userinfo .love .iconfont{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.userinfo-container .userinfo .love-love{
  background-color: rgb(199, 198, 198);
}
.userinfo-container .userinfo .love .iconfont{
  font-size: 26rpx;
  margin-right: 6rpx;
}

.userinfo-container .userinfo .love text{
  margin-left: 0rpx;
  font-size: 26rpx;
  font-weight: unset;
}

.userinfo-container .time {
  font-size: 24rpx;
  color: rgb(133, 132, 132);
}
.content-container .title {
  line-height: 88rpx;
  font-size: 36rpx;
}
.content-container .content {
  width: 100%;
  height: auto;
  line-height: 44rpx;
  font-size: 30rpx;
  text-align: justify;
  color: rgb(88, 88, 88);
  /* background-color: yellowgreen; */
}
.content-container .operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  /* line-height: 88rpx; */
  /* background-color: violet; */
}
.content-container .operation .good-love {
  display: flex;
  flex-direction: row;
}

.content-container .operation .good-love .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgb(202, 202, 202);
  color: rgb(190, 190, 190);
  font-size: 28rpx;
  padding: 6rpx 22rpx;
  margin: 18rpx 20rpx 0 0;
  border-radius: 50rpx;
  background-color: white;
}
.content-container .operation .good-love .item-active {
  border: 2rpx solid #f6a57f;
  color: #f6a57f;
}

.operation .iconfont{
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 6rpx;
  font-size: 32rpx;
}

.content-container .operation .comment {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  /* border: 2rpx solid #f6a57f; */
  color: white;
  font-size: 28rpx;
  padding: 8rpx 22rpx;
  margin: 18rpx 0 0 0;
  border-radius: 50rpx;
  background-color: #f6a57f;
}

.comment-container {
  display: flex;
  flex-direction: column;
  padding: 14rpx;
  background-color: white;
  /* background-color: aqua; */
  border-radius: 14rpx;
}
.comment-container .number {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgb(236, 235, 235);
}
.comment-container .comment-empty {
  min-height: 166rpx;
  color: rgb(131, 130, 130);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.comment-container .comment-info {
  display: flex;
  flex-direction: column;
}



.comment-item {
  /* background-color: blueviolet; */
  margin: 8rpx 2rpx;
  display: flex;
  flex-direction: row;
}
.comment-left {
  /* background-color: greenyellow; */
  width: 66rpx;
}
.comment-left .portrait {
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
}
.comment-right {
  width: 100%;
  /* background-color: yellowgreen; */
  margin-left: 14rpx;
}
.right-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* background-color: violet; */
  justify-content: space-between;
  line-height: 48rpx;
}
.right-top .username {
  font-size: 26rpx;
}
.right-top .comment-time {
  font-size: 22rpx;
  color: rgb(133, 132, 132);
}
.comment-right .comment-content {
  width: 100%;
  font-size: 27rpx;
  line-height: 40rpx;
  color: rgb(82, 81, 81);
  text-align: justify;
  /* background-color: hotpink; */
}




.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .5);
  opacity: 0.8;
}
.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  /* background-color: hotpink; */
  border-radius: 26rpx 26rpx 0 0;
}
  
.body-container{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin: 16rpx;
}
.operation-icon {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-size: 30rpx;
  line-height: 66rpx;
  padding-bottom: 10rpx;
  width: 100%;
}
.operation-icon .item {
  flex: 1;
  /* background-color: lawngreen; */
  /* margin: 0 16rpx; */
}
.operation-icon .item-common text{
  border: 2rpx solid rgb(202, 202, 202);
  color: rgb(190, 190, 190);
  font-size: 28rpx;
  padding: 4rpx 20rpx;
  border-radius: 50rpx;
  background-color: white;
  border: 2rpx solid #f6a57f;
  color: #f6a57f;
}
.operation-icon .cancel {
  text-align: left;
}
.operation-icon .title {
  text-align: center;
}
.operation-icon .comment {
  text-align: right;
}

.text-container {
  display: flex;
  box-sizing: border-box;
  border: 2rpx solid rgb(199, 198, 198);
  border-radius: 18rpx;
  padding: 16rpx;
}
.textarea{
  width: 100%;
  color: rgb(116, 116, 116);
  min-height: 88rpx;
  line-height: 42rpx;
  text-align: justify;
}
