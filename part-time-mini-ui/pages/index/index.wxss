page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: whitesmoke;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.carousels-container{
  margin-top: 10rpx;
  bottom: 8rpx;
  position: relative;
  background-color: whitesmoke;
}
.swipers{
  width: 100%;
  margin-top: 10rpx;
  height: 280rpx;
}
.swiper-image {
  position: absolute;
  width: 99%;
  height: 260rpx;
  margin-top: 10rpx;
  border-radius: 15rpx;
}
.swiper-active{
  opacity: 1;
  height: 280rpx;
  margin-top: 0rpx;
  transition:all .2s ease-in 0s;
}
/* 指示点 */
.dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 25rpx;
  display: flex;
  justify-content: center;
}
.dots .dot{
  margin: 0 8rpx;
  width: 10rpx;
  height: 6rpx;
  background-color: white;
  border-radius: 8rpx;
  transition: all .5s;
}
.dots .active{
  width: 15rpx;
  /* background-color: red; */
  background: #f6a57f;
}
