.itemImg{
  position: absolute;
  width: 99%;
  height: 260rpx;
  margin-top: 10rpx;
  border-radius: 15rpx;
}
.imgActive{
  opacity: 1;
  height: 280rpx;
  margin-top: 0rpx;
  transition:all .2s ease-in 0s;
}
/* 指示点 */
.dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 25rpx;
  display: flex;
  justify-content: center;
}
.dot{
  margin: 0 8rpx;
  width: 10rpx;
  height: 6rpx;
  background-color: white;
  border-radius: 8rpx;
  transition: all .5s;
}
.dot.active{
  width: 15rpx;
  background: #f6a57f;
}
.gradientColor{
  background: -webkit-linear-gradient(top,white,white,whitesmoke);
}

