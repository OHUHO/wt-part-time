/* components/AnswerQuestion/AnswerQuestion.wxss */
@import "/static/iconfont/iconfont.wxss";

.answerQuestionContainer{
    display: flex;
    flex-direction: column;
    background-color: white;
    margin-bottom: 20rpx;
}
.header{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
}
.userInfo {
    display: flex;
    flex-direction:row;
    align-items:center;
    font-size: 26rpx;
}
.image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50rpx;
    margin-right: 20rpx;
}
.name{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.time{
    font-size: 24rpx;
    color: rgb(158, 156, 156);
}
.contents{
    margin-top: 10rpx;
    margin-left: 80rpx;
    font-size: 30rpx;
    letter-spacing: normal;
    line-height: 50rpx;
}
.select{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    padding-top: 10rpx;
}
.row{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    /* border: 2rpx solid rgb(184, 183, 183); */
    /* border-radius: 40rpx; */
    padding: 6rpx 20rpx;
    margin-left: 24rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: rgb(155, 153, 153);
}
.iconfont{
    display: flex;
}
.rowText{
    display: flex;
}
.replyBoxRow{
    display: flex;
    flex-direction: row;
    border: 2rpx solid rgb(184, 183, 183);
    margin-left: 80rpx;
    height: 70rpx;
    align-items: center;
    margin-top: 10rpx;
}
.inputBox{
    background-color: white;
    font-size: 30rpx;
    letter-spacing: normal;
    margin: 10rpx 20rpx;
    margin-right: 0rpx;
    width: 80%;
}
.confirmReply{
    display: flex;
    border: 2rpx solid rgb(184, 183, 183);
    height: 70rpx;
    align-items: center;
    justify-content: center;
    width: 20%;
    font-size: 30rpx;
    color: rgb(78, 77, 77);
    background-color: whitesmoke;
}


.reply{
    /* display: flex;
    flex-direction: column; */
    background-color: whitesmoke;
    margin-top: 10rpx;
    margin-left: 80rpx;
    font-size: 30rpx;
    letter-spacing: normal;
    line-height: 50rpx;
    padding: 10rpx;
    border-radius: 5rpx;
    /* margin-bottom: 10rpx; */
}
.replyHeader{
    display: flex;
    flex-direction: row;
    justify-content: space-between;   
}
.username{
    font-size: 30rpx;
    color: #f6a57f;
}
.replyTime{
    font-size: 24rpx;
    color: rgb(158, 156, 156);
}
.replyDetail{
    font-size: 30rpx;
    letter-spacing: normal;
    line-height: 50rpx;
}
.line{
    background: whitesmoke;
    width: 100%;
    height: 5rpx;
    /* margin: 30rpx 0rpx; */
    margin-top: 20rpx;
    margin-bottom: 10rpx;
}

