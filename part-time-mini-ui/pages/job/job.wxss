page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: whitesmoke;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.store-info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 10rpx  16rpx;
  align-items: center;
  /* background-color: #f6a57f; */
  background-color: #f8e0d4;
  padding: 18rpx;
  border-radius: 14rpx;
}
.store-info .name{
  font-size: 28rpx;
  font-weight: 400;
}
.store-info .btn{
  border: 2rpx solid rgb(74, 74, 74);
  color: rgb(74, 74, 74);
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 60rpx;
}