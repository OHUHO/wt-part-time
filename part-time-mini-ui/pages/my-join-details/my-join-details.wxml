<wxs src='/utils/filter.wxs' module='filter'></wxs>
<navigation-bar title="我参加的兼职详情" back="{{ true}}" color="black" background="#FFF"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list" wx:if="{{job}}">
  <view class="job-header">
    <view class="title">
      <text>{{job.name}}</text>
      <text class="salary">{{filter.detailSalaryFormat(job.salary,job.salaryType)}}</text>
    </view>
    <view class="body">
      <view class="label">
        <text>{{filter.payTypeFormat(job.payType)}}</text>
      </view>
      <text class="time">{{ job.createTime }}</text>
    </view>
    <view class="job-content">
      岗位需求: {{ job.content }}
    </view>
  </view>

  <view class="job-body">
    <view class="content-item">
      <view class="hint">
        <icon class="iconfont icon-didian"></icon>
        <text > 工作地点</text>
      </view>
      <text class="detail">{{job.address}}</text>
    </view>
    <view class="line"></view>
    <view class="content-item">
      <view class="hint">
        <icon class="iconfont icon-shijianduan"></icon>
        <text > 工作日期</text>
      </view>
      <text class="detail">{{filter.dateFormatLength(job.beginTime)}} ~ {{filter.dateFormatLength(job.endTime)}}</text>
    </view>
    <view class="line"></view>
    <view class="content-item">
      <view class="hint">
        <icon class="iconfont icon-renshu"></icon>
        <text > 人数要求</text>
      </view>
      <text class="detail">{{job.registered}} / {{job.count}}</text>
    </view>
    <view class="line"></view>
    <view class="content-item">
      <view class="hint">
        <icon class="iconfont icon-xingbieyaoqiu"></icon>
        <text > 性别要求</text>
      </view>
      <text class="detail">{{job.gender == '1' ? '男' : job.gender == '2' ? '女' : '不限'}}</text>
    </view>
  </view>

  <view class="job-registration">
    <view class="head-title">
      <text>商家信息</text>
    </view>
    <view class="registration-container">
      <view class="item">
        <view class="userinfo">
          <!-- <image class="portrait" src="{{ item.portrait }}" alt=""/> -->
          <text class="username">{{ job.storeName }}</text>
        </view>
        <view class="reviews">
          <button bind:tap="goReviews" wx:if="{{reviews == null}}">去评价</button>
          <button bind:tap="goReviews" wx:else>已评价</button>
        </view>
      </view>
    </view>
  </view>

  <view class="job-registration" wx:if="{{reviews != null}}">
    <view class="head-title">
      <text>我的评价</text>
    </view>
    <view class="registration-container">
      <view class="item">
        <view class="reviews">
          <view class="revires-item">
            <text class="label">星级:</text>
            <view class="stars">
              <view class="star-item" 
                wx:for="{{stars}}" 
                wx:key="index">
                <image src="{{item}}"/>
              </view>
            </view>
          </view>
          <view class="revires-item">
            <text class="label">评价:</text>
            <ciew class="label-content"> {{ reviews.content }} </ciew>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
