.job-type{
  display: flex;
  box-sizing: border-box;
  flex-direction:row;
  flex-wrap: wrap;
  height: 300rpx;
  background-color: white;
  /* background-color: hotpink; */
  margin: 16rpx;
}
.type-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
  width: 50%;
  padding: 20rpx;
  border: 4rpx solid whitesmoke;
  border-radius: 16rpx;
  background-color: white;
  background-color: rgb(177, 194, 144);
  /* background-color: #e9d1c7; */
}
.type-item .title{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.type-item image{
  height: 100rpx;
  width: 100rpx;
}
.type-item .big-title{
  font-weight: 400;
}
.type-item .small-title{
  font-size: 24rpx;
  color: rgb(104, 102, 102);
}



