/*轮播图区域*/
.swiperContainer{
  margin-top: 10rpx;
  bottom: 8rpx;
  position: relative;
  background-color: whitesmoke;
}
.imageContainer{
  width: 100%;
  margin-top: 10rpx;
  height: 280rpx;
}
/* .turnItem{
  height: 00rpx;
