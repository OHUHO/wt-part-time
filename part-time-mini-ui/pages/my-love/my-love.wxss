page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: whitesmoke;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.love-container {
  margin: 16rpx;
}

.item {
  display: flex;
  flex-direction: column;
  background-color: white;
  /* background-color: red; */
  margin: 16rpx 0 0 0;
  padding: 16rpx;
  border-radius: 12rpx;
}
.item .title {
  font-size: 32rpx;
}

.item .other-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: rgb(105, 104, 104);
}
.item .other-info .userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item .other-info .userinfo image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.item .other-info .userinfo text {
  margin-left: 10rpx;
}
.item .other-info .time {
  font-size: 24rpx;
  color: rgb(133, 132, 132);
}

